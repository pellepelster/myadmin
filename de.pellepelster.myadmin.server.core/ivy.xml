<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

	<info organisation="de.pellepelster.myadmin" module="server-core" status="integration" />

	<configurations>
		<conf name="master" />
		<conf name="runtime" />
		<conf name="sources" />
		<conf name="compile" extends="default" />
 		<conf name="test" extends="compile" />
		<conf name="default" extends="master, runtime" />
	</configurations>

	<publications>
		<artifact name="server-core" type="jar" ext="jar" conf="master" />
		<artifact name="server-core-source" type="source" ext="jar" conf="sources" />
	</publications>

	<dependencies defaultconf="*->default">

		<dependency name="db" rev="latest.integration" conf="*->@" />

		<dependency name="client-base" rev="latest.integration" conf="*->@" />
		
		<dependency org="org.codehaus.jackson" name="jackson-xc" rev="1.9.8" />

		<dependency org="org.codehaus.jackson" name="jackson-mapper-asl" rev="1.9.8" />

		<dependency name="server-lib" rev="latest.integration" conf="*->default" />

		<dependency org="com.google.code.gson" name="gson" rev="2.2.4" />
		
	</dependencies>

</ivy-module>
