<?xml version="1.0" encoding="UTF-8"?>

<project basedir="." name="de.pellepelster.myadmin.server" default="build">

	<import file="../de.pellepelster.myadmin.build/MyAdminBuild.xml" />

	<target name="init" depends="clean">
		<mkdir dir="${dist.location}" />
		<mkdir dir="${build.location}" />
	</target>

	<target name="clean">
		<delete dir="${dist.location}" />
		<delete dir="${build.location}" />
	</target>

	<path id="de.pellepelster.myadmin.server.classpath">
		<path refid="server.base.classpath" />
		<fileset dir="${de.pellepelster.myadmin.client.base.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.client.core.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.client.web.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.server.core.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.generator.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.db.location}/dist" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.server.lib.location}/jackson" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${de.pellepelster.myadmin.server.lib.location}/extcos" includes="*.jar" excludes="*-source.jar" />
		<fileset dir="${dist.location}">
			<include name="*.jar"/>
		</fileset>
	</path>
	
	<path id="de.pellepelster.myadmin.server.dsl.classpath">
		<path refid="generate.base.classpath" />
	</path>

	<target name="build" depends="clean, init, refprojects.build, javac, jar"/>
	
	<target name="build.nodeps" depends="clean, init, javac, jar"/>

	<target name="build.test" depends="clean, init, refprojects.build, javac, jar">
		<ant antfile="../de.pellepelster.myadmin.server.test/build.xml" inheritall="false" />
	</target>
	
	<target name="build.nodeps.test" depends="clean, init, javac, jar">
		<ant antfile="../de.pellepelster.myadmin.server.test/build.xml" inheritall="false" />
	</target>

	<target name="javac">
		<javac debug="true" debuglevel="${debuglevel}" destdir="${build.location}" source="${source}" target="${target}">
			<src path="src" />
			<classpath refid="de.pellepelster.myadmin.server.classpath" />
		</javac>
	</target>

	<target name="refprojects.build">
		<ant antfile="${de.pellepelster.myadmin.client.core.location}/build.xml" inheritall="false" />
		<ant antfile="${de.pellepelster.myadmin.client.web.location}/build.xml" inheritall="false" />
		<ant antfile="${de.pellepelster.myadmin.generator.location}/build.xml" inheritall="false" />
		<ant antfile="${de.pellepelster.myadmin.server.core.location}/build.xml" inheritall="false" />
		<ant antfile="${de.pellepelster.myadmin.db.location}/build.xml" inheritall="false" />
	</target>

	<target name="jar">
		<jar destfile="${dist.location}/${ant.project.name}.jar">
			<fileset dir="${build.location}" includes="**/*" />
			<fileset dir="src/" includes="**/*.xml" />
			<fileset dir="src/" includes="**/*.properties" />
		</jar>
		<jar destfile="${dist.location}/${ant.project.name}-source.jar" basedir="src/" manifest="src/META-INF/MANIFEST.MF" />
	</target>

</project>
