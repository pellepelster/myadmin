<ivy-module version="1.0">

	<info organisation="de.pellepelster.myadmin" module="tools" status="integration" />

	<configurations>
		<conf name="master" />
		<conf name="runtime" />
		<conf name="sources" />
		<conf name="compile" extends="runtime" />
 		<conf name="test" extends="compile" />
		<conf name="default" extends="master, runtime" />
	</configurations>

	<publications>
		<artifact name="tools" type="jar" ext="jar" conf="master" />
		<artifact name="tools-source" type="source" ext="jar" conf="sources" />
	</publications>

	<dependencies>

		<dependency name="generator" rev="latest.integration" conf="*->generated.server" />
		
		<dependency name="server" rev="latest.integration" conf="*->master" />
		
		<dependency name="dsl-generator" rev="latest.integration" conf="*->master;compile->compile" />

		<dependency org="ant" name="ant" rev="1.6.5">
			<artifact name="ant" type="jar" />
		</dependency>

		<dependency org="org.apache.commons" name="commons-io" rev="1.3.2" />

		<dependency org="org.springframework" name="spring-asm" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-asm" type="jar" />
		</dependency>

		<dependency org="org.springframework" name="spring-aop" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-aop" type="jar" />
		</dependency>
		
		<dependency org="org.springframework" name="spring-expression" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-expression" type="jar" />
		</dependency>

		<dependency org="org.springframework.security" name="spring-security-config" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-security-config" type="jar" />
		</dependency>

		<dependency org="org.springframework.security" name="spring-security-web" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-security-web" type="jar" />
		</dependency>

		<dependency org="org.springframework.security" name="spring-security-remoting" rev="3.1.0.RELEASE" transitive="false">
			<artifact name="spring-security-remoting" type="jar" />
		</dependency>

		<dependency org="aopalliance" name="aopalliance" rev="1.0">
			<artifact name="aopalliance" type="jar" />
		</dependency>

	</dependencies>

</ivy-module>
