<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">

	<info organisation="de.pellepelster.myadmin" module="server-test" status="integration" />

	<configurations>
		<conf name="master" />
		<conf name="runtime" />
		<conf name="sources" />
		<conf name="compile" extends="default" />
 		<conf name="test" extends="compile" />
		<conf name="default" extends="master, runtime" />
	</configurations>

	<dependencies defaultconf="*->default">

		<dependency name="server" rev="latest.integration" conf="*->@" />

		<dependency name="db-test" rev="latest.integration" conf="*->@" />

		<dependency org="org.seleniumhq.selenium" name="selenium-java" rev="2.31.0" />
		<dependency org="org.seleniumhq.selenium" name="selenium-api" rev="2.31.0" />
		<dependency org="org.seleniumhq.selenium" name="selenium-firefox-driver" rev="2.31.0" />

		<dependency org="com.thoughtworks.xstream" name="xstream" rev="1.4.4" />

		<dependency org="org.apache.solr" name="solr" rev="4.4.0"  />

		<dependency org="org.apache.httpcomponents" name="httpcomponents-client" rev="4.3" />

		<dependency org="org.codehaus.cargo" name="cargo-core-uberjar" rev="1.2.4" />
		<dependency org="org.codehaus.cargo" name="cargo-ant" rev="1.2.4" />
		
		<dependency org="org.slf4j" name="slf4j-parent" rev="1.7.5" />
		<dependency org="log4j" name="log4j" rev="1.2.15" transitive="false">
			<artifact name="log4j" type="jar"/>
		</dependency>

		<dependency org="org.apache.solr" name="solr-solrj" rev="4.4.0" />

	</dependencies>

</ivy-module>
